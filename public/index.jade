doctype html
html(ng-app="app")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible",content="IE=edge")
        meta(name="viewport",content="width=device-width, initial-scale=1")
        title {{site.title}}
        link(rel="stylesheet",href="/bower_components/bootstrap/dist/css/bootstrap.min.css")
        link(rel="stylesheet",href="/bower_components/bootstrap/dist/css/bootstrap-theme.min.css")
        link(rel="stylesheet",href="/bower_components/font-awesome/css/font-awesome.min.css")
        link(rel="stylesheet",href="css/app.css")
        //![if lt IE 9]
            script(src="/bower_components/html5shiv/dist/html5shiv.min.js")
            script(src="/bower_components/respond/dest/respond.min.js")
    body
        nav.navbar.navbar-inverse.navbar-fixed-top
            .container
                .navbar-header
                    button.navbar-toggle.collapsed(type="button",data-toggle="collapse",data-target="#navbar")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href="#") {{site.title}}
                #navbar.navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li(ng-class="{active:'/'==path}"): a(href="#/") Home
                        li(ng-class="{active:'/posts'==path}"): a(href="#/posts") Posts
                        li(ng-class="{active:'/tags'==path}"): a(href="#/tags") Tags
                        li(ng-class="{active:'/archives'==path}"): a(href="#/archives") Archives
                    form.navbar-form.navbar-right
                        input.form-control(type="text", placeholder="Search...")

        #main
            .container
                .row
                    #view.col-md-9(ng-view)
                    #sidebar.col-md-3.col-md-offset-9.hidden-sm.hidden-xs(ng-controller="sidebar")
                        .list-group
                            a.list-group-item.list-group-item-info(href="#/archives") archives
                            a.list-group-item(ng-repeat="archive in archives|limitTo:10|orderBy:[year,month]:reverse",ng-href="#/archives/{{archive.year}}/{{archive.month}}") {{archive.year}}-{{archive.month}}
                                small.badge {{archive.count}}
                        .list-group
                            a.list-group-item.list-group-item-info(href="#/tags") tags
                            a.list-group-item(ng-repeat="tag in tags|limitTo:10|orderBy:count:reverse",ng-href="#/tags/{{tag.tag}}") {{tag.tag}}
                                small.badge {{tag.count}}

        footer
            .container
                hr
                p.text-muted.text-center Copyright &copy; 2014 IoloTheBard. All Rights Reserved.

        script(src="/bower_components/angular/angular.min.js")
        script(src="/bower_components/angular-route/angular-route.min.js")
        script(src="/bower_components/angular-sanitize/angular-sanitize.min.js")
        script(src="/bower_components/jquery/dist/jquery.min.js")
        script(src="/bower_components/bootstrap/dist/js/bootstrap.min.js")
        script(src="/bower_components/marked/lib/marked.js")
        script(src="js/np.common.js")
        script(src="js/np.data.js")
        script(src="js/np.meta.js")
        script(src="js/app.js")
